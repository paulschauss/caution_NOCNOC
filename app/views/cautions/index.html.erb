<h1>Welcome to cautions#index</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Payment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cautions.each do |caution| %>
      <tr>
        <td><%= caution.name %></td>
        <td><%= caution.amount %></td>
        <td><%= button_to "Deposit now!", checkout_create_path, params: {id: caution.id}, remote: true %></td>
        <td><%= link_to 'Show', caution %></td>
        <td><%= link_to 'Edit', edit_caution_path(caution) %></td>
        <td><%= link_to 'Destroy', caution, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <%= link_to 'New Caution', new_caution_path %>
